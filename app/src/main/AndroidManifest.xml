<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- SMS / CALL (không khai trùng) -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- Thiết bị không có sóng vẫn cài được -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme._1150070050_NguyenNgocTuVy_QLPK_DAGK"
        android:usesCleartextTraffic="true"
        android:allowBackup="false"
        tools:replace="android:allowBackup">

    <!-- Login là entry point -->
    <activity
        android:name=".Activities.LoginActivity"
        android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

        <activity android:name=".Activities.AdminActivity" android:exported="true"/>


        <!-- Đăng ký -->
    <activity
        android:name=".Activities.RegisterActivity"
        android:exported="true" />

    <!-- Quên/đổi mật khẩu -->
    <activity
        android:name=".Activities.ForgotResetActivity"
        android:exported="true" />

    <!-- Main -->
    <activity
        android:name=".MainActivity"
        android:exported="true" />

    <!-- Pin rút/cắm sạc -->
    <activity
        android:name=".PowerStatusActivity"
        android:exported="true"
        android:label="Power Status" />
</application>
    </manifest>
