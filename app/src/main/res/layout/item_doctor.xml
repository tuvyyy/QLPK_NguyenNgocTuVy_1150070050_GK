<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="12dp"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="8dp" android:background="#FFFFFF">

    <TextView
        android:id="@+id/tvDoctorName"
        android:text="BS. Nguyễn Văn A"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvDoctorSpecialty"
        android:text="Nội tổng quát"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/tvDoctorPhone"
            android:text="0909xxxxxx"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/btnEdit"
            android:src="@android:drawable/ic_menu_edit"
            android:contentDescription="Sửa"
            android:padding="6dp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>

        <ImageView
            android:id="@+id/btnDelete"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="Xoá"
            android:padding="6dp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
    </LinearLayout>
</LinearLayout>
