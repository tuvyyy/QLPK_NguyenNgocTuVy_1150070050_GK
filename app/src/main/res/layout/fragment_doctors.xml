<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Quản lý Bác sĩ"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="4dp"/>

    <!-- Hàng tìm kiếm: tên + nút Tìm + dropdown lọc chuyên khoa -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/etSearch"
            android:hint="Nhập tên bác sĩ cần tìm"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background"
            android:padding="8dp"/>

        <Button
            android:id="@+id/btnSearch"
            android:text="Tìm"
            android:layout_width="72dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"/>

        <Spinner
            android:id="@+id/spFilterSpecialty"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Khung thêm mới: Tên + SĐT -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/etName"
            android:hint="Tên bác sĩ"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background"
            android:padding="8dp"/>

        <EditText
            android:id="@+id/etPhone"
            android:hint="SĐT"
            android:inputType="phone"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@android:drawable/editbox_background"/>
    </LinearLayout>

    <!-- Chuyên khoa (dropdown lấy từ CSDL) + nút Thêm -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">

        <Spinner
            android:id="@+id/spInputSpecialty"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnAdd"
            android:text="➕ Thêm"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        android:layout_marginTop="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"/>
</LinearLayout>
