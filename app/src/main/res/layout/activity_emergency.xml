<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical" android:padding="12dp">

        <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Khẩn cấp (SMS) – Phòng khám"
            android:textStyle="bold" android:textSize="18sp" android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:weightSum="2" android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp" android:layout_height="wrap_content"
                    android:layout_weight="1" android:text="Auto-SOS"/>

                <Switch
                    android:id="@+id/sw_auto_sos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp" android:layout_height="wrap_content"
                    android:layout_weight="1" android:text="Auto-Reply"/>

                <Switch
                    android:id="@+id/sw_auto_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/edt_hotline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số hotline trực cấp cứu"
            android:inputType="phone"
            android:minHeight="48dp"
            android:padding="8dp" />

        <EditText
            android:id="@+id/edt_safe"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Mẫu tin An toàn" android:inputType="textMultiLine"
            android:minLines="2" android:maxLines="4" android:padding="8dp"/>

        <EditText
            android:id="@+id/edt_sos"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Mẫu tin SOS (dùng [HOTLINE])" android:inputType="textMultiLine"
            android:minLines="3" android:maxLines="6" android:padding="8dp"/>

        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:weightSum="3" android:paddingTop="8dp">

            <Button
                android:id="@+id/btn_save"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:text="Lưu cấu hình"/>

            <Button
                android:id="@+id/btn_call_hotline"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:text="Gọi hotline" android:layout_marginStart="8dp"/>

            <Button
                android:id="@+id/btn_reply_safe"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:text="Trả lời An toàn" android:layout_marginStart="8dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_reply_sos"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Gửi hướng dẫn SOS" android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Danh sách yêu cầu (SOS/CHECK)" android:paddingTop="12dp"
            android:textStyle="bold"/>

        <ListView
            android:id="@+id/lv_messages"
            android:layout_width="match_parent" android:layout_height="300dp"
            android:dividerHeight="1dp" android:layout_marginTop="4dp"/>
    </LinearLayout>
</ScrollView>
